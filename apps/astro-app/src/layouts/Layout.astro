---
import "../styles/global.css";
import Navbar from "../components/astro/Navbar.astro";
import PostHog from "../components/astro/PostHog.astro";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	type?: string;
}

const {
	title = "PDF Password Recovery, Crack & Remover Tool | PDF Ambulance - Free & Secure",
	description = "Free PDF password recovery, crack and remover tool. Recover, crack or remove lost PDF passwords securely in your browser. 100% privacy-first - all processing happens locally on your device.",
	image = "/og-image.png",
	type = "website",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.url.origin);
const ogImageURL = new URL(image, canonicalURL);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Dark mode script to prevent flash of unstyled content -->
    <script is:inline>
      (function() {
        const savedTheme = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        if (savedTheme === "dark" || (!savedTheme && prefersDark)) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#dc2626" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="PDF Ambulance" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="pdf password recovery, pdf password crack, pdf password remover, pdf unlock, pdf security, secure password recovery, free pdf password tool, pdf password breaker"
    />

    <PostHog />
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
    <Navbar />
    <main>
      <slot />
    </main>
  </body>
</html>

<script>
  import { actions } from "astro:actions";

  // Track visitor_entered event when page loads
  const trackVisitorEntered = async () => {
    try {
      let session = await window.cookieStore.get("session_id");
      if (!session || session.value === "") {
        await window.cookieStore.set({
          name: "session_id",
          value: crypto.randomUUID(),
          expires: Date.now() + 30 * 60 * 1000,
          sameSite: "lax",
        });
        session = await window.cookieStore.get("session_id");
      }
      const timestamp = Date.now();

      // Send to PostHog
      if (window.posthog) {
        window.posthog.capture("visitor_entered", {
          timestamp,
        });
      }

      // Send to server for logging
      await actions.analytics({
        event: "page_view",
        timestamp,
        sessionId: session?.value,
        attributes: {
          pathname: window.location.pathname,
        },
      });
    } catch (error) {
      console.error("Failed to track visitor_entered event:", error);
    }
  };

  // Track on page load
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", trackVisitorEntered);
  } else {
    trackVisitorEntered();
  }
</script>
